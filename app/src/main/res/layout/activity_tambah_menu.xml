<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cappucino"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".TambahMenu">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AEFFEB3B"
        android:padding="10dp"
        android:text="TAMBAH MENU CAFE"
        android:textAlignment="center"
        android:textSize="18sp" />

    <View
        android:id="@+id/view14"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KODE MENU" />

    <EditText
        android:id="@+id/kolom_ed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAMA MENU" />

    <EditText
        android:id="@+id/kolom_ed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detaill" />

    <EditText
        android:id="@+id/kolom_ed3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HARGA" />

    <EditText
        android:id="@+id/kolom_ed4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KODE JENIS" />

    <EditText
        android:id="@+id/kolom_ed5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#AEFFEB3B"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:text="Simpan" />

    <View
        android:id="@+id/view15"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#AEFFEB3B"
        android:drawableLeft="@android:drawable/ic_media_previous"
        android:text="Kembali" />


</LinearLayout>